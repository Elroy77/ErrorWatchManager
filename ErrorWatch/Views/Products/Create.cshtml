@model ErrorWatch.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="col-md-12">
                <h3 class="title-5 m-b-35">Quản lý sản phẩm</h3>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Thêm mới sản phẩm</strong>
                    </div>
                    <div class="card-body card-block">
                        @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label class=" form-control-label"></label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <p class="form-control-static" style="font-size:17px;margin-left:100px;margin-bottom:20px;">Nhập thông tin sản phẩm</p>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="text-input" class=" form-control-label">Name</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    @Html.EditorFor(model => model.Product_Name, new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "text-input", @name = "text-input", @placeholder = "Ex: Rolex..." } })
                                    <small class="form-text text-muted"></small>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="text-input" class=" form-control-label">Price</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "text-input", @name = "text-input", @placeholder = "Ex: 26122000..." } })
                                    <small class="form-text text-muted"></small>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="text-input" class=" form-control-label">Size</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "text-input", @name = "text-input", @placeholder = "Ex: 1 or 2" } })
                                    <small class="form-text text-muted"></small>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="select" class=" form-control-label">Gender</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    @Html.DropDownListFor(model => model.Gender,
                                    new List<SelectListItem>
                                    {
                                        new SelectListItem { Value = "" , Text = "Select" },
                                        new SelectListItem { Value = "1" , Text = "Male" },
                                        new SelectListItem { Value = "0" , Text = "FeMale" },
                                    }, new { @class = "form-control", @id = "select", @name = "select" })
                                    <small class="form-text text-muted"></small>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="file-input" class=" form-control-label">Image</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="file" id="file-input" name="file-input" class="form-control-file">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="text-input" class=" form-control-label">Description</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    @Html.EditorFor(model => model.Desciption, new { htmlAttributes = new { @class = "form-control", @type = "textarea", @id = "text-input", @name = "text-input", @placeholder = "Ex: sản phẩm..." } })
                                    <small class="form-text text-muted"></small>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="text-input" class=" form-control-label">Inventory number</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    @Html.EditorFor(model => model.Inventory_Number, new { htmlAttributes = new { @class = "form-control", @type = "", @id = "text-input", @name = "text-input", @placeholder = "Ex: 26" } })
                                    <small class="form-text text-muted"></small>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="select" class=" form-control-label">Manufacturer</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    @Html.DropDownListFor(model => model.Manufacturer_ID,
                                    new List<SelectListItem>
                                    {
                                        new SelectListItem { Value = "" , Text = "Select" },
                                        new SelectListItem { Value = "1" , Text = "Rolex" },
                                        new SelectListItem { Value = "2" , Text = "Omega" },
                                        new SelectListItem { Value = "3" , Text = "Seiko" },
                                        new SelectListItem { Value = "4" , Text = "Timex" },
                                        new SelectListItem { Value = "5" , Text = "Movado" },
                                        new SelectListItem { Value = "6" , Text = "Hublot" },
                                        new SelectListItem { Value = "7" , Text = "Tissot" }
                                    }, new { @class = "form-control", @id = "select", @name = "select" })
                                    <small class="form-text text-muted"></small>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="select" class=" form-control-label">Status</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    @Html.DropDownListFor(model => model.Status,
                                    new List<SelectListItem>
                                    {
                                        new SelectListItem { Value = "" , Text = "Select" },
                                        new SelectListItem { Value = "True" , Text = "Đang bán" },
                                        new SelectListItem { Value = "False" , Text = "Khóa" },
                                    }, new { @class = "form-control", @id = "select", @name = "select" })
                                    <small class="form-text text-muted"></small>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-success">
                                    <i class="fa fa-dot-circle-o"></i> Create
                                </button>
                                <button type="reset" class="btn btn-danger">
                                    <i class="fa fa-ban"></i> Reset
                                </button>
                                <a href="https://localhost:44368/Products/index" type="submit" class="btn btn-primary">
                                    <i class="fa fa-backward"></i> Back
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

